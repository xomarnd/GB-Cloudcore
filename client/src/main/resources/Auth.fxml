<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="authorization" alignment="CENTER" prefHeight="125.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.geekCloud.client.AuthController">

    <TextField fx:id="login" maxWidth="200" focusTraversable="true" promptText="Логин" />
    <PasswordField fx:id="password" maxWidth="200" promptText="Пароль" />

    <HBox alignment="CENTER" spacing="2"    prefHeight="42.0" prefWidth="600.0">
        <Button onAction="#auth" prefWidth="100" text="Authorization" />
        <Button onAction="#registration" prefWidth="100" text="Registration" />
    </HBox>
</VBox>
